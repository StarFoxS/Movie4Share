<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 --><item>
    <shape>
        <solid
            android:color="@color/lightpink" />
        <corners
            android:radius="50dp" />

    </shape>
</item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp"
        android:left="1dp">
        <shape>
            <gradient
                android:startColor="@color/pink"
                android:centerColor="@color/midpink"
                android:endColor="@color/lightpink"
                android:type="linear"
                android:angle="135" />

            <!-- 圆角 -->
            <corners
                android:radius="50dp" />
        </shape>
    </item>
</layer-list>
