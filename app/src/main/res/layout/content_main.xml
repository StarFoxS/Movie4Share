<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.star.movie4share.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <!-- 下面的线性布局是5个tab放置的区域 -->
    <LinearLayout
        android:id="@+id/tabs_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#eeefef"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!-- 使用include标签，可以直接重用xml -->
        <include
            android:id="@+id/tab_home"
            layout="@layout/mainactivity_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/tab_love_coin"
            layout="@layout/mainactivity_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/tab_submit"
            layout="@layout/mainactivity_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/tab_deal"
            layout="@layout/mainactivity_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/tab_userinfo"
            layout="@layout/mainactivity_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>