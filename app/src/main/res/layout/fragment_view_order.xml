<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    tools:context="com.example.star.movie4share.fragment.ViewOrder"
    >

    <TextView
        android:id="@+id/fragment_view_order_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="我的订单"
        android:textColor="@color/darkgray"
        android:background="@color/lightGray"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/fragment_view_order_line"
        android:layout_below="@+id/fragment_view_order_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgray"/>

    <View
        android:id="@+id/fragment_view_order_line2"
        android:layout_below="@+id/fragment_view_order_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <ListView
        android:id="@+id/fragment_view_order_list"
        android:layout_below="@+id/fragment_view_order_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="#000000"
        />

</RelativeLayout>