<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.star.movie4share.activity.ConfirmOrderActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightGray"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/fragment_confirm_order_title"
        >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/confirm_order"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/fragment_confirmorder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="22sp"
            android:text="确认订单"
            android:layout_gravity="center"
            android:textColor="@color/midGray"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_confirm_order_title"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/activity_confirm_receiver_name"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="收货人："
            android:textSize="14sp"
            android:textColor="#595757"/>

        <TextView
            android:id="@+id/activity_confirm_receiver_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/activity_confirm_receiver_name"
            android:layout_marginStart="0dp"
            android:text=""
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="#595757"/>

        <EditText
            android:id="@+id/activity_confirm_receiver_name_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/activity_confirm_receiver_name"
            android:layout_marginStart="0dp"
            android:text=""
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:inputType="text"
            android:hint="请输入姓名"
            android:textSize="14sp"
            android:textColor="@color/edittextGray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/activity_confirm_receiver_address"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_confirm_receiver_name"
            android:text="收获地址："
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="#595757" />

        <TextView
            android:id="@+id/activity_confirm_receiver_address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_confirm_receiver_name"
            android:layout_toEndOf="@id/activity_confirm_receiver_address"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="#595757" />

        <EditText
            android:id="@+id/activity_confirm_receiver_address_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_confirm_receiver_name"
            android:layout_toEndOf="@id/activity_confirm_receiver_address"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:inputType="number"
            android:text=""
            android:textSize="14sp"
            android:textColor="#595757"
            android:hint="请输入收货地址"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/activity_confirm_receiver_phone"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_confirm_receiver_address"
            android:text="联系电话："
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="#595757" />

        <TextView
            android:id="@+id/activity_confirm_receiver_phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/activity_confirm_receiver_phone"
            android:layout_below="@id/activity_confirm_receiver_address"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="#595757" />

        <EditText
            android:id="@+id/activity_confirm_receiver_phone_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/activity_confirm_receiver_phone"
            android:layout_below="@id/activity_confirm_receiver_address"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:hint="请输入联系电话"
            android:inputType="numberDecimal"
            android:text=""
            android:textSize="14sp"
            android:textColor="#595757"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/activity_confirm_edit_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_confirm_receiver_phone"
            android:layout_alignParentEnd="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/activity_confirm_edit_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/edit"/>

            <TextView
                android:id="@+id/activity_confirm_edit_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activity_confirm_edit_pic"
                android:layout_centerVertical="true"
                android:text="编辑"
                android:textSize="12sp"
                android:textColor="#595757"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_confirm_submit_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_confirm_receiver_phone"
            android:layout_alignParentEnd="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/activity_confirm_submit_save_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:text="保存"
                android:textSize="12sp"
                android:textColor="@color/midpink"/>

            <TextView
                android:id="@+id/activity_confirm_submit_cancel_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/activity_confirm_submit_save_textview"
                android:layout_marginStart="20dp"
                android:text="取消"
                android:textSize="12sp"
                android:textColor="@color/midpink"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/activity_confirm_line"
        android:layout_below="@id/receiver"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:scaleType="fitXY"
        android:background="@color/lightGray"/>


    <ListView
        android:id="@+id/confirm_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_confirm_line"
        android:dividerHeight="0dp"
        android:divider="#00000000">
    </ListView>

    <ImageView
        android:id="@+id/activity_confirm_line2"
        android:layout_below="@id/confirm_product_list"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lightGray"/>

    <LinearLayout
        android:id="@+id/activity_confirm_product_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/activity_confirm_line2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/activity_confirm_product_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="共0种商品"
                android:textSize="16sp"
                android:textColor="#595757"/>


            <TextView
                android:id="@+id/activity_confirm_total_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="合计：￥0"
                android:layout_gravity="top"
                android:textSize="16sp"
                android:textColor="@color/midpink"/>

        </LinearLayout>

        <Button
            android:id="@+id/activity_confirm_order_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_button"
            style="?android:attr/borderlessButtonStyle"
            android:text="确认付款"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>







</RelativeLayout>
